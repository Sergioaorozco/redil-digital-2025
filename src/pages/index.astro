---
// Astro
import HomeLayout from "@/layouts/HomeLayout.astro";
import { Image } from "astro:assets";
// Images
import miembros2025 from "@/images/iglesia/miembros_2025.webp";
import NavRedilLaureles from "@/images/iglesia/nav-redil-laureles.webp";
import RedilDonaciones from "@/images/iglesia/nav-redil-donacion.webp";
import qrBancolombia from "@/images/ui/QR_redil_laureles.webp";
// Components
import Nav from "@/components/shared/Nav.astro";
import ButtonCard from "@/components/shared/ButtonCard.astro";
import { Modal } from "@/components/ui/modal";

import { ArrowRight, type LucideIcon } from "lucide-react";
import RedilMap from "@/components/react/RedilMap";
import Notification from "@/components/shared/Notification.astro";
import QuickInfo from "@/components/shared/QuickInfo.astro";
import {
  MapPin,
  Clock,
  MessageCircleQuestionIcon as ChatIcon,
} from "lucide-react";
import FacebookIcon from "@/assets/FacebookIcon.astro";
import InstragramIcon from "@/assets/InstragramIcon.astro";

const encodedText = "Dios los bendiga, tengo una pregunta";
const comprobanteMsg = "Buen dia, adjunto comprobante de";

// Video data globally fetched in middleware
const videoId = Astro.locals.videoId ?? "d0HIs_vBf30";
const title = Astro.locals.videoTitle ?? "Bienvenidos al Redil Laureles";
---

<HomeLayout>
  <section
    class="px-5 pt-24 gap-5 min-h-[calc(100vh-7rem)] text-center relative pb-32"
  >
    <main>
      <div class="absolute top-0 left-0 right-0">
        <Nav />
      </div>
      <div
        class="absolute -z-10 top-0 left-0 w-full h-full bg-gradient-to-b from-accent to-transparent overflow-clip rounded-b-4xl"
      >
      </div>
      <!-- Video y Bienvenida -->
      <article
        class="grid grid-cols-1 md:grid-cols-3 w-full gap-3 items-center max-w-7xl mx-auto mb-6"
      >
        <article class="md:col-span-2">
          <Notification variant="video"
            ><p>Última Predicación: {title}</p></Notification
          >
          <div class="overflow-clip rounded-2xl shadow-lg">
            <lite-youtube
              videoid={videoId}
              autoload
              posterquality="maxresdefault"
              params="rel=0&enablejsapi=1"
            >
            </lite-youtube>
          </div>
        </article>
        <!-- Bienvenidos -->
        <div
          class="r-well flex flex-col justify-center md:justify-around gap-6 h-full"
        >
          <span class="">
            <h1 class="text-4xl md:text-5xl font-bold mb-3 text-primary-title">
              Bienvenido al Redil Laureles
            </h1>
            <p class="md:text-lg">
              Damos gracias a Dios por tu visita. Esperamos que este espacio sea
              de mucha bendición para tu vida. Te invitamos a conocer quiénes
              somos y a explorar los recursos que tenemos para ti. ¡Siéntete
              bienvenido!
            </p>
          </span>
          <div class="mt-5 flex flex-col gap-3 w-full">
            <QuickInfo
              variant="primary"
              label="Nuestra Ubicación"
              description={`Diagonal 75 # 72-108,\nMedellín - Colombia`}
              url="https://www.google.com/maps/dir//Iglesia+Redil+Laureles,+Dg+75E+%23+72-108,+Laureles+-+Estadio,+Medell%C3%ADn,+Laureles,+Medell%C3%ADn,+Antioquia/@6.2402159,-75.5961931,17z/data=!4m17!1m7!3m6!1s0x8e44299d9e9acbdb:0xb0d006e7fcabf0af!2sIglesia+Redil+Laureles!8m2!3d6.2402159!4d-75.5961931!16s%2Fg%2F11j7ywdxbv!4m8!1m0!1m5!1m1!1s0x8e44299d9e9acbdb:0xb0d006e7fcabf0af!2m2!1d-75.596162!2d6.2402434!3e0?entry=ttu&g_ep=EgoyMDI2MDExMy4wIKXMDSoASAFQAw%3D%3D"
              icon={MapPin}
            />
            <QuickInfo
              variant="amber"
              label="Celebraciones"
              description="Domingos: 9 AM | 11 AM"
              icon={Clock}
            />
          </div>
        </div>
      </article>
    </main>
    <article
      class="max-w-7xl w-full grid grid-cols-1 md:grid-cols-3 gap-4 h-full mx-auto"
    >
      <Modal client:visible header="¿Cómo llegar al Redil Laureles?">
        <div
          slot="trigger"
          class="cursor-pointer rounded-md h-full w-full flex items-end justify-start overflow-clip relative"
        >
          <ButtonCard
            title="¿Cómo llegar?"
            image={NavRedilLaureles}
            alt="Nuestros miembros 2024"
          />
        </div>

        <div class="flex flex-col-reverse md:flex-row md:justify-between gap-4">
          <!-- Video Como llegar -->
          <div class="w-full flex flex-col gap-3">
            <p class="font-bold text-lg">Vídeo sobre cómo llegar</p>

            <div
              class="aspect-video w-full overflow-hidden rounded-lg shadow-sm"
            >
              <lite-youtube
                videoid="d0HIs_vBf30"
                autoload
                posterquality="maxresdefault"
                params="rel=0&enablejsapi=1"
              >
              </lite-youtube>
            </div>

            <div
              class="h-auto md:h-40 md:overflow-y-auto pr-2 custom-scrollbar"
            >
              <p
                class="text-muted-foregrounds text-sm leading-relaxed text-pretty"
              >
                Llegar al Redil Laureles es muy sencillo. Nos encontramos en el
                corazón de una de las zonas más tradicionales de Medellín, muy
                cerca de la Avenida Nutibara y la Parroquia de Santa Teresita.
                <br /><br />
                Si te orientas por los parques, estamos a solo unas cuadras del Segundo
                Parque de Laureles. Si vienes en Metro, la estación más cercana es
                Estadio. Desde allí, puedes tomar un bus de la ruta 191 o 193, o un
                corto trayecto en taxi.
                <br /><br />
                Si prefieres el bus, cualquier ruta que transite por la Avenida Nutibara
                o la calle 33 te dejará a pocos minutos caminando. Para quienes vienen
                en vehículo particular, pueden subir por la Avenida 33 y girar hacia
                el sector de la carrera 76.
                <br /><br />
                ¡Es un sector muy central y fácil de encontrar! Te esperamos con los
                brazos abiertos en el Redil Laureles.
              </p>
            </div>
          </div>

          <div class="w-full flex flex-col gap-3">
            <div class="flex flex-col">
              <p class="font-bold text-lg">Nuestra Ubicación</p>
              <p class="text-sm text-neutral-500">
                Diagonal 75 # 72-108, Medellín - Colombia
              </p>
            </div>
            <div
              class="h-[300px] md:h-full w-full rounded-lg overflow-hidden relative shadow-sm border border-neutral-200 dark:border-neutral-800"
            >
              <RedilMap client:visible />
            </div>
          </div>
        </div>
      </Modal>
      <ButtonCard
        title="Nuestra Iglesia"
        link="/iglesia"
        image={miembros2025}
        alt="Nuestra Iglesia"
      />
      <!-- Modal Donaciones -->
      <Modal
        client:visible
        header="¿Cómo hacer una donación - El Redil Iglesia Bautista?"
      >
        <div
          slot="trigger"
          class="cursor-pointer rounded-md h-full w-full flex items-end justify-start overflow-clip relative"
        >
          <ButtonCard
            title="Donaciones"
            image={RedilDonaciones}
            alt="Imagen de uvas, como simbolo del fruto de la gracia"
          />
        </div>

        <section class="flex-responsive md:justify-between gap-4">
          <article class="w-full flex flex-col justify-between">
            <div>
              <span class="mb-3">
                <p>El Redil Iglesia Bautista</p>
                <p>NIT: 901394090-1</p>
                <hr class="my-2" />
                <p class="font-bold">Bancolombia Ahorros: 34400000319</p>
              </span>
              <!-- <button
                class="my-2 flex items-center justify-between cursor-pointer px-3 py-3 w-full rounded-lg bg-amber-500 hover:bg-amber-300 text-black font-bold"
              >
                <span>A través de Wompi</span>
                <i class="bg-white p-1 rounded-full">
                  <ArrowRight size={20} />
                </i>
              </button> -->
            </div>
            <p class="text-muted-foreground text-sm mt-4">
              Nota: Recuerda enviar tu comprobante de pago a nuestro correo
              electrónico: elredillaureles@gmail.com o a cel:<span
                class="underline text-white"
                ><a href=`https://wa.me/3137374303?text=${comprobanteMsg}`>
                  313-737-4303</a
                ></span
              >
            </p>
          </article>
          <article class="w-full">
            <p class="mb-2 font-semibold md:text-right">QR Bancolombia</p>
            <Image
              width={300}
              height={300}
              src={qrBancolombia}
              alt="QR Bancolombia"
              class="place-self-end"
            />
          </article>
        </section>
      </Modal>
    </article>
    <!-- Social -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 max-w-7xl mx-auto mt-3 w-full"
    >
      <QuickInfo
        variant="neutral"
        label="Facebook"
        description="Sigue nuestras transmisiones"
        url="https://www.facebook.com/redildelaureles/"
        icon={FacebookIcon as LucideIcon}
        action="Seguir"
      />
      <QuickInfo
        variant="neutral"
        label="Instagram"
        description="Mira nuestro día a día"
        url="https://www.instagram.com/redildelaureles/"
        icon={InstragramIcon as LucideIcon}
        action="Seguir"
      />
      <QuickInfo
        variant="neutral"
        label="WhatsApp"
        description="Escríbenos tus dudas"
        url={`https://wa.me/573124485932?text=${encodedText}`}
        icon={ChatIcon as LucideIcon}
        action="Chatear"
      />
    </div>
  </section>
</HomeLayout>
