---
import Layout from "@/layouts/Layout.astro";
import { SignedIn, SignedOut, SignIn } from "@clerk/astro/components";
---

<Layout pageTitle="Miembros">
  <SignedIn>
    <main class="wrapper px-5">
      <section class="flex flex-col min-lg:flex-row gap-x-3">
        <article class:list={['min-md:p-4 min-md:w-1/3', 'max-md:text-center']}>
          <h2 class="font-semibold">Próxima Asamblea:</h2>
          <h3>Miércoles 18 de Junio de 2025</h3>
          <button class="mt-4 bg-blue-700 hover:bg-blue-900 duration-300 text-white px-4 py-2 rounded-lg w-full">Agendar</button>
        </article>
        <article class="flex flex-col gap-3 w-full">
          <div class="r-well w-full">
            <h2 class="font-semibold">Itinerario</h2>
            <ul class="list-disc pl-5">
              <li>Conteo de Quorum</li>
              <li>Alabanza</li>
              <li>Oración Pastoral</li>
              <li>Membresía</li>
              <li>Oración Final</li>
            </ul>
          </div>
          <div class="r-well rounded-lg flex h-32">
            <p>Carta de Representación</p>
          </div>
        </article>
      </section>

      <section class="w-full mt-5">
        <ul class="flex flex-col gap-2 min-md:flex-row h-20 min-sm:h-56">
          <li class="r-well w-full flex min-md:aspect-square">
            <p>Carta de Representación</p>
          </li>
          <li class="r-well w-full flex min-md:aspect-square">
            <p>Estatutos</p>
          </li>
          <li class="r-well w-full flex min-md:aspect-square">
            <p></p>
          </li>
        </ul>
      </section>
      
    </main>
  </SignedIn>
  <SignedOut>
    <section class="relative flex justify-center items-center lg:h-screen h-screen">
      <SignIn forceRedirectUrl={'/miembro'}/>
    </section>
  </SignedOut>
</Layout>

<style scoped>
  @import "tailwindcss";

</style>