---
import Layout from "@/layouts/Layout.astro";
---
<Layout pageTitle="Ingreso">
  <!-- WIP Show when user signed out -->
  <!-- Show a Sign in section -->
<section>
  <article class="flex items-center justify-between">
    <div class="md:w-1/4 p-6 space-y-4 md:space-y-6 sm:p-8 r-well mx-auto">
      <form class="space-y-4 md:space-y-6" action="#" method="post">
        <div class="my-4">
          <label for="email" class="block mb-2 text-sm font-medium text-neutral-900 dark:text-white">Correo Electrónico</label>
          <input autocomplete="email" type="email" name="email" id="email" class="bg-neutral-50 border border-neutral-300 text-neutral-900 rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5 dark:bg-neutral-700 dark:border-neutral-600 dark:placeholder-neutral-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="name@redillaureles.com" required="">
        </div>
        <div class="my-4">
          <label for="password" class="block mb-2 text-sm font-medium text-neutral-900 dark:text-white">Contraseña</label>
          <input autocomplete="current-password" type="password" name="password" id="password" class="bg-neutral-50 border border-neutral-300 text-neutral-900 rounded-lg focus:ring-blue-600 focus:border-blue-600 block w-full p-2.5 dark:bg-neutral-700 dark:border-neutral-600 dark:placeholder-neutral-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="********" required="">
        </div>
        <button
          class="disabled:bg-neutral-400 disabled:hover:bg-neutral-400 w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
          id="btnLoginSubmit"
          aria-label="login-submit-button"
          type="submit"
        >
          Inicio
        </button>
      </form>
    </div>
  </article>
</section>
</Layout>

<script>
  import { Report } from 'notiflix';
  import { actions } from 'astro:actions';
  import type { AuthError } from 'firebase/auth';
  import { navigate } from 'astro:transitions/client';

  const modalOptions =  {
    className: 'text-center',
    titleFontSize: "18px",
    messageFontSize: "14px",
    svgSize: "50px"
  }

  // Selectors
  const $loginForm = document.querySelector('form') as HTMLFormElement;
  const $btnLoginSubmit = document.querySelector('#btnLoginSubmit') as HTMLButtonElement;

  const submitAction = async() => {
    // Preparing payload
    const formData = new FormData($loginForm);

    try {
      $btnLoginSubmit.setAttribute('disabled', 'disabled');
      const { error} = await actions.loginUser(formData);
      if (error) throw error;

      navigate('/miembros');

    } catch(error) {
      const firebaseError = error as AuthError;

      Report.failure(
        'Error al iniciar sesión',
        `${firebaseError.message}`,
        'Cerrar',
        modalOptions
      )
    } finally {
      $btnLoginSubmit.removeAttribute('disabled');
    }
  }

  $loginForm?.addEventListener('submit', async function(event){
    event.preventDefault();
    event.stopPropagation();
    submitAction();
  })
  
</script>

<style scoped>
@import "tailwindcss";
</style>