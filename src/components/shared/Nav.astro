---
import ModalMenu from "@/components/Menu.astro";
import LogoImage from "@/assets/LogoImage.astro";
import ProfileMenu from "./ProfileMenu.astro";
const { isLoggedIn } = Astro.locals;
---

<nav class="p-5 flex justify-between items-center z-10 mx-auto max-w-7xl w-full">
  <a aria-label="main-logo-nav" href="/" class="w-40 dark:text-white text-neutral-900">
    <LogoImage />
  </a>
  <section class="flex gap-x-3 items-center justify-between">
    <ModalMenu />
    <!-- WIP Show when user signed out -->
    <div class="font-medium max-sm:hidden lg:block">
      <a
        href="/ingreso"
        class="nav-button bg-secondary text-secondary-foreground hover:bg-secondary/80 lg:transition-colors lg:duration-200 sm:animate-none"
      >
        Membres√≠a</a
      >
    </div>
    {!isLoggedIn && (
      <ProfileMenu/>
    )}
  </section>
</nav>

<style>
  .nav-button {
    font-weight: 600;
    border-radius: 5rem;
    padding-inline: 1rem;
    padding-block: 0.5rem;
    &.menu {
      border: 2px solid black;
      &:hover {
        background-color: black;
        color: white;
      }
    }
  }
</style>
