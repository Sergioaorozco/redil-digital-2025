---
import LogoImage from "@/assets/LogoImage.astro";
---

<button id="modalMenuButton" class="nav-button menu transition-all duration-200"
  >Menu</button
>
<section
  id="modalMenu"
  class="hidden z-20 min-w-full h-dvh bg-gradient-to-b from-blue-50 to-blue-200 dark:from-slate-950 dark:to-slate-700 fixed top-0 right-0 left-0 bottom-0"
>
  <figure class="relative h-full max-lg:hidden bg-slate-200 dark:bg-slate-600 background-nav-image w-1/2 overflow-clip">
    <div class="absolute flex items-end justify-center w-full h-1/2 bottom-0 bg-gradient-to-t from-slate-700 to-transparent">
      <span class="text-white w-56 pb-24">
        <LogoImage></LogoImage>
      </span>
    </div>
    <video class="object-cover h-full w-full" transition:persist src="/iglesia-intro-web.mp4" loop muted autoplay></video>
  </figure>
  <article class="flex flex-col px-10 max-sm:py-8 py-5 w-full min-h-3/4">
    <div class="flex flex-col">
      <button
        id="modalClose"
        class="nav-button menu transition-all duration-200 self-end cursor-pointer dark:text-slate-200 bg-white dark:bg-slate-600 hover:bg-slate-100 dark:hover:bg-slate-700"
        >Cerrar</button
      >
      <ul class="menu-list flex flex-col">
        <li><a href="/" referrerpolicy="no-referrer">Inicio</a></li>
        <li><a href="/iglesia" referrerpolicy="no-referrer">Nuestra Iglesia</a></li>
        <li><a href="/ministerios" referrerpolicy="no-referrer">Ministerios</a></li>
        <li><a href="/miembros" referrerpolicy="no-referrer">Miembros</a></li>
      </ul>
    </div>
    <select class="absolute bottom-10 text-slate-800 dark:text-white rounded-xl py-3 px-4 w-fit bg-blue-300 dark:bg-slate-600" name="lang-select" id="lang-select">
      <option value="es">Espa√±ol</option>
      <option value="en">English</option>
    </select>
  </article>
</section>

<script>
  import { gsap } from "gsap";
  import { createmenuAnim } from "@/utils/gsapAnimations";

  document.addEventListener("astro:page-load", () => {
    // Selectors
    const $modalMenuBtn = document.getElementById("modalMenuButton");
    const $modal = document.getElementById("modalMenu");
    const $modalCloseBtn = document.getElementById("modalClose");
    const $backgroundNav = document.querySelector(".background-nav-image");
    let modalIsOpened = false;

    if(!$modal) return;

    // Inital Setup
    gsap.set($modal, {x:"100%", autoAlpha:0});
    gsap.set($backgroundNav, {width:"0%"});

    const menuAnim = createmenuAnim($modal)

    function toggleModal () {
      if(!$modal) return;
      modalIsOpened = !modalIsOpened;

      if(menuAnim.reversed() || menuAnim.progress() === 0) {
        menuAnim.play();
      } else {
        menuAnim.reverse();
      }
    }
  
    $modalMenuBtn?.addEventListener("click", toggleModal);
    $modalCloseBtn?.addEventListener("click", toggleModal);
  });


</script>

<style scoped>
  @import "tailwindcss";

  .menu-list {
    li:not(.language-item) {
      @apply flex flex-col text-slate-800 dark:text-slate-300 text-3xl min-md:text-7xl font-bold py-3;
      @apply hover:text-slate-600 dark:hover:text-white cursor-pointer;
      a {
        @apply w-full h-full block;
      }
    }
  }
</style>